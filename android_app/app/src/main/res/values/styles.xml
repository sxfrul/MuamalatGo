<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ZakatButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">#07CBDC</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:drawableEnd">@drawable/ic_arrow</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:insetLeft">0dp</item> <!-- Removes extra padding -->
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="SettingsButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/settings_button_bg</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#D90F82</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:drawableEnd">@drawable/ic_arrow</item>
        <item name="android:drawableTint">#D90F82</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

